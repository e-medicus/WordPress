#!/bin/bash

# adapted from https://github.com/sclorg/s2i-php-container/blob/master/5.6/s2i/bin/assemble

set -e

shopt -s dotglob
echo "---> Installing application source..."

mv /tmp/src/* ./

# Fix source directory permissions
fix-permissions ./

# make all source files world rw
echo "Before chmod"
pwd
ls -al wp-content

echo "Make wp-content writable for all..."
chmod -R og+rw wp-content

echo "After chmod"
ls -al wp-content
